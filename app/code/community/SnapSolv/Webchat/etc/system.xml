<config>
	<tabs>
		<SnapSolv translate="label" module="webchat">
			<label>SnapSolv Webchat Channel</label>
			<sort_order>306</sort_order>
		</SnapSolv>
	</tabs>
	<sections>
		<webchat translate="label" module="webchat">
			<label>SnapSolv Webchat Channel Settings</label>
			<tab>SnapSolv_webchat</tab>
			<frontend_type>text</frontend_type>
			<sort_order>306</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<tab>SnapSolv</tab>
			<groups>
				<webchat_settings translate="label">
					<label>SnapSolv Webchat Channel Settings</label>
					<frontend_type>text</frontend_type>
					<sort_order>1</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<webchat_enable translate="label">
							<label>Enable Web Chat on All Pages: </label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>0</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
							<comment><![CDATA[Enable or Disable Chat]]></comment>
						</webchat_enable>
						<webchat_pages translate="label">
							<label>Select Page/pages where to show this chat widget: </label>
							<frontend_type>multiselect</frontend_type>
	                        <source_model>webchat/system_config_source_cmspages</source_model>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</webchat_pages>
						<webchat_data_business_id translate="label">
							<label>Business ID Assigned by SnapSolv: </label>
							 <validate>required-entry</validate> 
							<frontend_type>text</frontend_type>
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
							<comment><![CDATA[Enter 57893395-f6dd-4e31-a532-b5450034b23f for demo]]></comment>
						</webchat_data_business_id>
						<webchat_data_facebook_app_id translate="label">
							<label>FacebookÂ Page Id: </label>
							<frontend_type>text</frontend_type>
							<sort_order>3</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</webchat_data_facebook_app_id>
						<webchat_data_widget_title translate="label">
							<label>Chat Window Title: </label>
							<frontend_type>text</frontend_type>
							<sort_order>5</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</webchat_data_widget_title>
						<webchat_data_widget_hover_title translate="label">
							<label>Webchat Hoverover Title: </label>
							<frontend_type>text</frontend_type>
							<sort_order>6</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</webchat_data_widget_hover_title>
						<webchat_data_chat_position_left translate="label">
							<label>Chat Window Position Left: </label>
							<frontend_type>text</frontend_type>
							<sort_order>7</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
							<comment><![CDATA[ex: auto, 100px]]></comment>
						</webchat_data_chat_position_left>
						<webchat_data_chat_position_right translate="label">
							<label>Chat Window Position Right: </label>
							<frontend_type>text</frontend_type>
							<sort_order>8</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
							<comment><![CDATA[in px like 10px.]]></comment>
						</webchat_data_chat_position_right>
						<webchat_data_chat_position_bottom translate="label">
							<label>Chat Window Position Bottom: </label>
							<frontend_type>text</frontend_type>
							<sort_order>9</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
							<comment><![CDATA[in px like 10px.]]></comment>
						</webchat_data_chat_position_bottom>
						<webchat_data_chat_position_top translate="label">
							<label>Chat Window Position Top: </label>
							<frontend_type>text</frontend_type>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
							<comment><![CDATA[ex: 50px]]></comment>
						</webchat_data_chat_position_top>
						<webchat_data_width translate="label">
							<label>Chat Window Width: </label>
							<frontend_type>text</frontend_type>
							<sort_order>11</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
							<comment><![CDATA[in px like 300px.]]></comment>
						</webchat_data_width>
						<webchat_data_height translate="label">
							<label>Chat Window Height: </label>
							<frontend_type>text</frontend_type>
							<sort_order>12</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
							<comment><![CDATA[in % like 85%.]]></comment>
						</webchat_data_height>
						<webchat_data_header_bg_color translate="label">
							<label>Chat Window Theme Color: </label>
							<frontend_type>text</frontend_type>
							<validate>color</validate>
							<sort_order>14</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</webchat_data_header_bg_color>
						<webchat_data_header_text_color translate="label">
							<label>Chat Window Theme Text Color: </label>
							<frontend_type>text</frontend_type>
							<validate>color</validate>
							<sort_order>17</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</webchat_data_header_text_color>
						<webchat_data_widget_hover_title translate="label">
							<label>Chat Icon hover over Text: </label>
							<frontend_type>text</frontend_type>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</webchat_data_widget_hover_title> 
						<webchat_data_widget_position_left translate="label">
							<label>Chat Icon Position Left: </label>
							<frontend_type>text</frontend_type>
							<sort_order>21</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</webchat_data_widget_position_left>
						<webchat_data_widget_position_right translate="label">
							<label>Chat Icon Position Right: </label>
							<frontend_type>text</frontend_type>
							<sort_order>22</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</webchat_data_widget_position_right>
						<webchat_data_widget_position_bottom translate="label">
							<label>Chat Icon Position Bottom </label>
							<frontend_type>text</frontend_type>
							<sort_order>23</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</webchat_data_widget_position_bottom>
						<webchat_data_popup_message translate="label">
							<label>Friendly Pop-up Message: </label>
							<frontend_type>text</frontend_type>
							<sort_order>25</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</webchat_data_popup_message>
						<webchat_data_popup_timer_in_sec translate="label">
							<label>Friendly Pop-up Wait Time: </label>
							<frontend_type>text</frontend_type>
							<sort_order>26</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
							<comment><![CDATA[in seconds like 60 secs.]]></comment>
						</webchat_data_popup_timer_in_sec>
						<webchat_data_popup_refresh_timer_in_min translate="label">
							<label>Friendly Pop-up Second Reminder time: </label>
							<frontend_type>text</frontend_type>
							<sort_order>27</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
							<comment><![CDATA[in minutes like 10 mins.]]></comment>
						</webchat_data_popup_refresh_timer_in_min>
					</fields>
				</webchat_settings>
			</groups>
		</webchat>
	</sections>
</config>
